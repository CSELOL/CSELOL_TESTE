generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tournament {
  id          String   @id @default(uuid())
  name        String
  status      String   @default("PENDING") // OPEN, LIVE, ENDED
  date        String   // Simplified for now
  prize       String
  slots       String
  img         String
  createdAt   DateTime @default(now())
}